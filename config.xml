        <icon width="180" height="180" src="resources/icons/Resources/iphone/appicon-60@3x.png" />
        <splash width="320" height="480" src="resources/splash/Resources/iphone/Default.png" />
        <splash width="640" height="960" src="resources/splash/Resources/iphone/Default@2x.png" />
        <splash width="640" height="1136" src="resources/splash/Resources/iphone/Default-568h@2x.png" />
        <splash width="750" height="1334" src="resources/splash/Resources/iphone/Default-667h@2x.png" />
        <splash width="1242" height="2208" src="resources/splash/Resources/iphone/Default-Portrait-736h@3x.png" />
        <splash width="2208" height="1242" src="resources/splash/Resources/iphone/Default-Landscape-736h@3x.png" />
        <splash width="768" height="1004" src="resources/splash/Resources/iphone/Default-Portrait.png" />
        <splash width="1536" height="2008" src="resources/splash/Resources/iphone/Default-Portrait@2x.png" />
        <splash width="1024" height="748" src="resources/splash/Resources/iphone/Default-Landscape.png" />
        <splash width="2048" height="1496" src="resources/splash/Resources/iphone/Default-Landscape@2x.png" />
    </platform>
    <preference name="xwalkVersion" value="17+" />
    <preference name="xwalkCommandLine" value="--disable-pull-to-refresh-effect" />
    <preference name="xwalkMode" value="embedded" />
    <preference name="webviewbounce" value="false" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="AutoHideSplashScreen" value="false" />
    <preference name="ShowSplashScreenSpinner" value="false" />
    <preference name="FadeSplashScreen" value="true" />
    <preference name="FadeSplashScreenDuration" value=".2" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarStyle" value="blackopaque" />
    <preference name="StatusBarBackgroundColor" value="#000000" />
    <preference name="deployment-target" value="8.0" />
    <preference name="AndroidLaunchMode" value="singleTask" />
    <hook src="hooks/beforePrepare.js" type="before_prepare" />
    <engine name="ios" spec="4.1.0" />
    <engine name="android" spec="5.1.1" />
    <plugin name="com.meteor.cordova-update" spec="https://github.com/RocketChat/com.meteor.cordova-update" />
    <plugin name="cordova-plugin-sharingreceptor" spec="https://github.com/burstaholic/cordova-sharingreceptor.git" />
    <plugin name="cordova-plugin-crosswalk-webview" spec="1.6.0" />
    <plugin name="cordova-plugin-file" spec="4.1.1" />
    <plugin name="cordova-plugin-file-transfer" spec="1.5.0" />
    <plugin name="cordova-plugin-legacy-whitelist" spec="1.1.1" />
    <plugin name="cordova-plugin-console" spec="1.0.2" />
    <plugin name="cordova-plugin-splashscreen" spec="3.2.1" />
    <plugin name="ionic-plugin-keyboard" spec="2.0.1" />
    <plugin name="cordova-plugin-statusbar" spec="2.1.2" />
    <plugin name="cordova-plugin-facebook4" spec="1.7.0">
        <variable name="APP_ID" value="835103589938459" />
        <variable name="APP_NAME" value="Rocket.Chat" />
    </plugin>
    <plugin name="cordova-plugin-rocket-chat" spec="https://github.com/RocketChat/cordova-plugin-rocket-chat" />
    <plugin name="phonegap-plugin-push" spec="~1.4.2" />
    <plugin name="cordova-plugin-device" spec="1.1.1" />
    <plugin name="cordova-plugin-inappbrowser" spec="1.3.0" />
    <plugin name="cordova-plugin-dialogs" spec="1.2.0" />
    <plugin name="cordova-plugin-appinfo" spec="2.0.3" />
    <preference name="xwalkMultipleApk" value="true" />
</widget>
